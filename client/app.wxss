/**app.wxss**/
page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
} 

.header {
  height:50px;
  width: 100%;
  top:0px;
  display: flex;
  flex-direction: row;
  background-color: #B0B0B0;
  align-items: center;
}

.body {
  width: 100%;
  top:0px;
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
}

.body-container {
  display: flex;
  flex-direction: column
}

.content {
  display: flex
}

.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}

form {
  font-size: 12px;
}